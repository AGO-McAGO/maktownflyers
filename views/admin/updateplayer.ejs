<section id="updateplayer">

  <a href="/dashboard"> &larr; Back </a>

  <h1> Update Player </h1>

  <div>
    <form action="/updateplayer/<%= player._id %>" enctype="multipart/form-data" method="POST">

      <article>
        <div>
          <label for="playername"> <b> Player Name </b> </label> <br />
          <input type="text" name="playername" value="<%= player.playername %>" placeholder="Player Name ...." />
        </div>

        <div>
          <label for="playerposition"> <b> Player Position </b> </label> <br />
          <input type="text" name="playerposition" value="<%= player.playerposition %>" placeholder="Player Position ...." />
          <small> E.g. Center, Small Forward, Guard, e.t.c. </small>
        </div>

        <div>
          <label for="playernumber"> <b> Player Jersey Number </b> </label> <br />
          <input type="text" name="playernumber" value="<%= player.playernumber %>" placeholder="Player Jersey Number ...." />
        </div>

        <div>
          <label for="playerage"> <b> Player Age </b> </label> <br />
          <input type="text" name="playerage" value="<%= player.playerage %>" placeholder="Player Age ...." />
        </div>

        <div>
          <label for="playerexperience"> <b> Player Experience </b> </label> <br />
          <input type="text" name="playerexperience" value="<%= player.playerexperience %>" placeholder="Player Experience ...." />
          <small> Enter number of years of player experience </small>
        </div>

        <div>
          <label for="playerheight"> <b> Player Height </b> </label> <br />
          <input type="text" name="playerheight" value="<%= player.playerheight %>" placeholder="Player Height ...." />
          <small> In feet (ft), E.g 6.5, 6.1, 6.10, e.t.c. </small>
        </div>

        <div>
          <label for="playerweight"> <b> Player Weight </b> </label> <br />
          <input type="text" name="playerweight" value="<%= player.playerweight %>" placeholder="Player Weight ...." />
          <small> In Kilograms (Kg), E.g. 105.2, 76, e.t.c. </small>
        </div>

        <div>
          <label for="playerphoto"> <b> Choose Player Photo </b> </label>
          <input type="file" name="playerphoto" id="playerphoto" accept="image/*">
          <img src="/images/uploads/players/<%= player.playerphoto %>" alt="<%= player.playername %>" width="275" height="200" />
          <input type="hidden" name="playeroldphoto" id="playeroldphoto" value="<%= player.playerphoto %>">
        </div>
      </article>

      <div> <input type="submit" value="Update Player" class="adminaddbtn" /> </div>

    </form>
  </div>

</section>