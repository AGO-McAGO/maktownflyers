<section class="adminforms">
  
  <span> <a href="/dashboard"> <button class="link"> &larr; Back To Dashboard </button> </a> </span>
  <span> <a href="/staff"> <button class="link"> View All Staff </button> </a> </span>

  <h1> Update Staff </h1>

  <div>
    <form action="/updatestaff/<%= staff._id %>" enctype="multipart/form-data" method="POST">

      <article>
        <div>
          <label for="staffname"> <b> Staff Name </b> </label> <br />
          <input type="text" name="staffname" id="staffname" value="<%= staff.staffname %>" required />
        </div>

        <div>
          <label for="staffposition"> <b> Staff Position </b> </label> <br />
          <input type="text" name="staffrole" id="staffrole" value="<%= staff.staffrole %>" required />
        </div>

        <div>
          <label for="staffphoto"> <b> Choose Staff Photo </b> </label>
          <input type="file" name="staffphoto" id="staffphoto" accept="image/*" />
          <img src="/images/uploads/staff/<%= staff.staffphoto %>" alt="<%= staff.staffname %>" width="275" height="200" />
          <input type="hidden" name="staffoldphoto" id="staffoldphoto" value="<%= staff.staffphoto %>">
        </div>
      </article>

      <div> <input type="submit" value="Update Staff" class="adminformbtn" /> </div>

    </form>
  </div>

</section>