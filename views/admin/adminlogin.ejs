<section class="adminform">

  <h1> Admin Login </h1>

  <form action="/adminlogin" method="POST">

    <article class="inputs">
      <div> <label for="adminname"> <b> Name </b> </label> <input type="text" name="adminname" id="adminname" placeholder="Enter Admin Name" required /> </div>
      <div>
        <label for="adminpassword"> <b> Password </b> </label>
        <input type="password" name="adminpassword" id="adminpassword" placeholder="Enter Admin Password" required />
      </div>
    </article>

    <div> <input type="submit" value="Login" class="loginbtn" /> </div>

  </form>
  
  <a href="/adminforgotpassword"> <button type="button" class="link" disabled> <strong> Forgot Password? </strong> </button> </a>

</section>

